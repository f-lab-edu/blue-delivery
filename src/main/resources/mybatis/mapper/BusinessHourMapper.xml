<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.delivery.restaurant.businesshour.BusinessHourMapper">

    <insert id="insert" parameterType="map">
        INSERT INTO BUSINESS_HOURS (REST_ID, OPEN, CLOSE, DAY_OF_WEEK)
        VALUES (#{restId}, #{open}, #{close}, #{dayOfWeek})
    </insert>

    <delete id="deleteAllByRestaurantId" parameterType="long">
        DELETE FROM BUSINESS_HOURS WHERE REST_ID=#{restId}
    </delete>
</mapper>
