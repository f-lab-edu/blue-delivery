<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.delivery.restaurant.businesshour.BusinessHourMapper">
    <resultMap id="customMap" type="map">
        <result property="days" javaType="java.time.DayOfWeek" column="DAY_OF_WEEK" typeHandler="MyBatisDayOfWeekHandler"/>
        <association property="businessHours" resultMap="businessHourResultMap"/>
    </resultMap>

    <resultMap id="businessHourResultMap" type="BusinessHour">
        <result column="OPEN" property="open" typeHandler="LocalTimeTypeHandler"/>
        <result column="CLOSE" property="close" typeHandler="LocalTimeTypeHandler"/>
    </resultMap>

    <select id="findHoursByRestaurantId"
            resultMap="customMap"
            parameterType="long">
        select
            OPEN,
            CLOSE,
            DAY_OF_WEEK
        FROM BUSINESS_HOURS bhs
        WHERE REST_ID = #{id}
    </select>
</mapper>
