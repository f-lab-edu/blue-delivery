<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.delivery.restaurant.menugroup.MenuGroupMapper">

    <resultMap id="menuGroupResult" type="com.delivery.restaurant.menugroup.MenuGroupDto">
        <result property="id" column="ID"/>
        <result property="name" column="NAME"></result>
        <result property="content" column="CONTENT"></result>
        <result property="shopId" column="SHOP_ID"></result>
        <collection property="menus" column="ID" select="selectMenuByGroupId" ofType="java.util.ArrayList"></collection>
    </resultMap>

    <insert id="saveMenuGroup" parameterType="com.delivery.restaurant.menugroup.MenuGroupDto">
        INSERT INTO MENU_GROUP(SHOP_ID, NAME, CONTENT)
        VALUES (#{shopId}, #{name}, #{content})
    </insert>

    <select id="selectMenuByGroupId" resultType="com.delivery.restaurant.menu.Menu">
        SELECT *
        FROM MENU;
    </select>

    <select id="groupNameCheck" resultType="integer">
        SELECT COUNT(NAME)
        FROM MENU_GROUP
        WHERE NAME = #{name};
    </select>

    <select id="shopIdCheck" resultType="Integer">
        SELECT ID
        FROM SHOP
        WHERE ID = #{shopId}
    </select>

    <select id="getMenuGroup" resultMap="menuGroupResult" resultType="com.delivery.restaurant.menugroup.MenuGroupDto">
        SELECT *
        FROM MENU_GROUP
        WHERE id = #{ID};
    </select>

</mapper>
